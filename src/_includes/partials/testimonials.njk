{% import "partials/macros/carousel.njk" as carousel %}

<div class="my-10 md:my-24 container mx-auto flex flex-col md:flex-row shadow-sm overflow-hidden" x-data="{ testimonialActive: 3 }" x-cloak>
  <div class="relative w-full py-2 md:py-24 bg-indigo-700 md:w-1/2 flex flex-col item-center justify-center">

    <div class="absolute top-0 left-0 z-10 grid-indigo w-16 h-16 md:w-40 md:h-40 md:ml-20 md:mt-24"></div>

    <div class="relative text-2xl md:text-5xl py-2 px-6 md:py-6 md:px-1 md:w-64 md:mx-auto text-indigo-100 font-semibold leading-tight tracking-tight mb-0 z-20">
      <span class="md:block">What Our</span>
      <span class="md-block">Pup's Families</span>
      <span class="block">Are Saying!</span>
    </div>

    <div class="absolute right-0 bottom-0 mr-4 mb-4 hidden md:block">
      <button
        class="rounded-l-full border-r bg-gray-100 text-gray-500 focus:outline-none hover:text-indigo-500 font-bold w-12 h-10"
        x-on:click="testimonialActive = testimonialActive === 1 ? 4 : testimonialActive - 1">
        &#8592;
      </button><button
        class="rounded-r-full bg-gray-100 text-gray-500 focus:outline-none hover:text-indigo-500 font-bold w-12 h-10"
        x-on:click="testimonialActive = testimonialActive >= 4 ? 1 : testimonialActive + 1">
        &#8594;
        </button>
    </div>
  </div>

  <div class="bg-gray-100 md:w-1/2">
    <div class="flex flex-col h-full relative">
      {{ carousel.quote() }}
      <div class="h-full relative z-10">
        {{ carousel.content('1', 'Christine was great! I will be using her Tuesday and Thursdays. Highly recommended.') }}
        {{ carousel.content('2', 'Christine was fantastic! Very caring friendly! Took Mercer on multiple adventures throughout the day. Will Defintely use Christine again and refer her to my friends.') }}
        {{ carousel.content('3', 'Christine instantly connected with our pup, made him comfortable and happy while we were out. Came back to a very happy dog every time. Christine is prompt and friendly and a natural with dogs! Highly recommend.') }}
        {{ carousel.content('4', 'Christine was so great! We used her multiple times while visiting Miami and Stella grew to love her. Would HIGHLY recommend to anyone looking for a dog walker or sitter.') }}
      </div>

      <div class="flex my-4 justify-center items-center">
        {{ carousel.button('1', 'AK') }}
        {{ carousel.button('2', 'WD') }}
        {{ carousel.button('3', 'PD') }}
        {{ carousel.button('4', 'CB') }}
      </div>

      <div class="flex justify-center px-6 pt-2 pb-6 md:py-6">
        {{ carousel.cite('1', 'Amanda K.','Jack Daniels', 'Jack Russell Terrier') }}
        {{ carousel.cite('2', 'William D.', 'Mercer, Daschund') }}
        {{ carousel.cite('3', 'Peter D.', 'Roger, Golden Doodle') }}
        {{ carousel.cite('4', 'Cate B.', 'Stella, Chihuahua') }}
      </div>
    </div>
  </div>
</div>

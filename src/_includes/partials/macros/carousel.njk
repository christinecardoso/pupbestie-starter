{% macro arrow_l(num, text) %}
<button
  class="rounded-l-full border-r bg-gray-100 text-gray-500 focus:outline-none hover:text-indigo-500 font-bold w-12 h-10"
  x-on:click="testimonialActive = testimonialActive === 1 ? {{ num }} : testimonialActive - 1">
  &#8592;
</button>
{% endmacro %}

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta http-equiv="X-UA-Compatible" content="ie=edge" />

<title>
  {{ page_title or title }} | {{ site.name }}
</title>

<link rel="canonical" href="{{ site.url or page.url }}" />

<meta property="og:site_name" content="{{ site.name }}" />
<meta property="og:title" content="{{ meta.title }}" />
<meta property="og:type" content="website" />
<meta property="og:url" content="{{ site.url or page.url }}" />

{# {% if social_image %}
  <meta name="twitter:card" content="summary_large_image" />
  <meta property="og:image" content="{{ site.url | '/images/social-share.png' }}" />
  <meta name="twitter:image" content="{{ social_image }}" />
  <meta property="og:image:alt" content="Page image for {{ site.name }}" />
  <meta name="twitter:image:alt" content="Page image for {{ site.name }}" />
{% endif %} #}

{% if meta.desc %}
  <meta name="description" content="{{ meta.desc }}" />
  <meta name="twitter:description" content="{{ meta.desc }}" />
  <meta property="og:description" content="{{ meta.desc }}" />
{% endif %}

<meta name="theme-color" content="#4a5568" />

<link rel="apple-touch-icon" href="/images/icons/icon-192x192.png" />
<link rel="icon" href="/images/icons/favicon.svg" type="image/svg+xml" />
<link rel="manifest" href="/manifest.json" />

<!-- Preconnect to the font file origin -->
<link
  rel="preconnect"
  href="https://rsms.me"
  crossorigin
/>

<!-- Preload the font stylesheet asynchronously with low priority -->
<link
  rel="preload"
  href="https://rsms.me/inter/inter.css"
  as="style"
/>

<!-- https://www.filamentgroup.com/lab/load-css-simpler/ -->
<link
  crossorigin="anonymous"
  rel="stylesheet"
  href="https://rsms.me/inter/inter.css"
  media="print"
  onload="this.media='all'; this.onload=null;"
/>

<link rel="stylesheet" href="/styles/index.css" />

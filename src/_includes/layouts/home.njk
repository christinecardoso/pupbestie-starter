---
layout: layouts/base.njk
templateClass: tmpl-home
---

{% block content %}
<main id="main-content" tabindex="-1">
  <div class="first-impression bg-gradient-to-r from-pink-500 via-red-500 to-yellow-500">
    <div class="pt-10 max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl font-bold leading-tight text-gray-900">
        {{ intro.title }}
      </h1>
    </div>
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="py-8 text-gray-600 leading-8">
        <p class="text-xl">
          {{ intro.desc }}
        </p>
        {# <p>As seen on Rover</p> #}
      </div>
      <div class="prose prose-gray prose-lg text-gray-500">
        {{ content }}
      </div>
    </div>
  </div>
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <h3 class="font-bold uppercase text-3xl">Services</h3>
    {% set services = services.items %}
    {% include "partials/services.njk" %}
  </div>
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <h3 class="font-bold uppercase text-3xl">Service Areas</h3>
    {% include "partials/neighborhoods.njk" %}
  </div>
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <h3 class="text-3xl font-bold text-center leading-tight">Request a Booking</h3>
    {% include "partials/forms/form-inquiry.njk" %}
  </div>

</main>
{% endblock %}

{% block headerScripts %}
<link rel="stylesheet" href="/styles/flatpickr.css">
{% endblock %}

{% block footerScripts %}
<script src="/scripts/flatpickr.js"></script>
<script type="text/javascript">
flatpickr('#form-flatpickr', {
  mode: "multiple",
  dateFormat: "Y-m-d",
  // defaultDate: ["2021-07-20", "2021-07-23"],
  enableTime: true,
  altInput: true,
  altFormat: "F j @ H:i",
  dateFormat: "m-d-Y H:i",
  minDate: "today",
  maxDate: new Date().fp_incr(90) // 14 days from now
});
</script>
{% endblock %}

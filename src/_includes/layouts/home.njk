---
layout: layouts/base.njk
templateClass: tmpl-home
---

{% block content %}
<main id="main-content" tabindex="-1">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold leading-tight text-gray-900">
      {{ intro.title }}
    </h1>
  </div>
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="py-8 text-gray-600 leading-8">
      <p class="text-xl">
        {{ intro.desc }}
      </p>
    </div>
    <div class="prose prose-gray prose-lg text-gray-500">
      {{ content }}
    </div>
  </div>
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">

    {% include "partials/neighborhoods.njk" %}

    {# {% set serviceLocations = services.locations %}
    {% include "partials/serviceLocations.njk" %} #}
    {% set services = services.items %}
    {% include "partials/services.njk" %}
    {% include "partials/forms/inquiry.njk" %}

    {% import "partials/forms/forms.njk" as forms %}

    {{ forms.label('Your Name', name='name') }}
    {{ forms.field('name', name='name', placeholder='Christine', type='text') }}
    {{ forms.desc('Please fill out this field.') }}
    {{ forms.label('Service') }}
    {{ forms.select('services', services) }}
    {{ forms.label('Phone', name='phone') }}
    {{ forms.field('phone', name='phone', type='phone', placeholder='305-973-6784') }}
    {{ forms.label('Email', name='email') }}
    {{ forms.field('email', name='email', type='email', placeholder='hi@pupbestie.com') }}
    {{ forms.label('Dates', name='flatpickr') }}
    {{ forms.field('flatpickr', id='flatpickr', name='flatpickr', placeholder='Select some dates..') }}
    {{ forms.label('Pet Name(s) and Breed', name='pets') }}
    {{ forms.field('pets', name='pets', placeholder='Champ (French Bulldog), Aubrey (Min Pin)', type='text') }}
    {{ forms.desc('Briefly describe your pup(s).') }}


  </div>

</main>
{% endblock %}

{% block headerScripts %}
<link rel="stylesheet" href="/styles/flatpickr.css">
{% endblock %}

{% block footerScripts %}
<script src="/scripts/flatpickr.js"></script>
<script>
var example = flatpickr('#flatpickr', {
  mode: "multiple",
  dateFormat: "Y-m-d",
  // defaultDate: ["2021-07-20", "2021-07-23"],
  enableTime: true,
  altInput: true,
  altFormat: "F j @ H:i",
  dateFormat: "m-d-Y H:i",
  minDate: "today",
  maxDate: new Date().fp_incr(90) // 14 days from now
});
</script>
{% endblock %}
